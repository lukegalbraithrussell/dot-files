snippet fig "Figure Env" b
\begin{figure}[${2:htpb}]
	\centering
	\includegraphics[width=${3:0.8}\linewidth]{${4:name.ext}}
	\caption{${4/(\w+)\.\w+/\u$1/}$0}
	\label{fig:${4/(\w+)\.\w+/$1/}}
\end{figure}
endsnippet

snippet cent "center env"
\begin{center}
	$1
\end{center}$0
endsnippet

snippet env "generic environment"
\begin{${1:name}}
	$2
\end{$1}$0
endsnippet

snippet incg "includegraphics"
\includegraphics[width=${1:0.8}\textwidth]{${2:image.ext}}$0
endsnippet

snippet enum "Enumerate" b
\begin{enumerate}
	\item $1
\end{enumerate}
$0
endsnippet

snippet item "Itemize" b
\begin{itemize}
	\item $1
\end{itemize}
$0
endsnippet

snippet desc "Description" b
\begin{description}
	\item[$1] $2
\end{description}
$0
endsnippet

# I don't understand the complexity of this here, but it works
snippet pac "Package" b
\usepackage`!p snip.rv='[' if t[1] else ""`${1:options}`!p snip.rv = ']' if t[1] else ""`{${2:package}}$0
endsnippet

